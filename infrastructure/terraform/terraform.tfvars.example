# TransNovel Terraform Variables Example
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "ap-northeast-2"
environment = "production"

# Database Configuration
db_instance_class    = "db.t4g.medium"
db_allocated_storage = 20
db_name              = "transnovel"
db_username          = "admin"
db_password          = "CHANGE_ME_SECURE_PASSWORD"

# Lambda Configuration
lambda_memory_size          = 1024
lambda_timeout              = 900
lambda_reserved_concurrency = 50

# SQS Configuration
sqs_visibility_timeout = 600
sqs_message_retention  = 345600

# Secrets (required)
nextauth_secret = "YOUR_NEXTAUTH_SECRET"

# Gemini API Keys (for pooling - add up to 5)
gemini_api_keys = [
  "AIza_YOUR_FIRST_KEY",
  "AIza_YOUR_SECOND_KEY",
  "AIza_YOUR_THIRD_KEY",
  "AIza_YOUR_FOURTH_KEY",
  "AIza_YOUR_FIFTH_KEY",
]
